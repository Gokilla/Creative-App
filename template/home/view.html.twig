{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <main role="main" class="inner cover">
        <div align="center" style="margin-top: 20%">
            <img src="{{ trailer.image }}"/>
            <h3 class="cover-heading">{{ trailer.title }}</h3>
            <p class="lead">{{ trailer.description }}</p>
            <p class="lead">
                <a href="/" class="btn btn-lg btn-secondary">Back</a>
                <a href="{{ trailer.link }}" class="btn btn-lg btn-secondary">More</a>
            </p>
        </div>
    </main>
{% endblock %}
